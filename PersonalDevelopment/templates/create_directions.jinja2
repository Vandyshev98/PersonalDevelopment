            <div class="row">
                <input type="text" class="form-control" name="5" placeholder="Пятое направление">
            </div>
            <div class="row">
                <input type="text" class="form-control" name="6" placeholder="Шестое направление">
            </div>
            <div class="row">
                <input type="text" class="form-control" name="7" placeholder="Седьмое направление">
            </div>
            <div class="row">
                <input type="text" class="form-control" name="8" placeholder="Восьмое направление">
            </div>
            <div class="content">
            <span class="font" style="color: red">
                {{ message }}
            </span>
            </div>
            <input class="btn btn btn-primary btn-block" style="width: 140px; float: left" type="submit"
                   value="Сохранить">
        </form>
